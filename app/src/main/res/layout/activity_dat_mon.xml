<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DatMonActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">
    <ImageView
        android:id="@+id/img_datMon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/banh_mi_bo_sot_tieu_den" />

        <ImageView
            android:id="@+id/btn_back_monAn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/btn_monAnYT"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_star_24" />
        <ImageView
            android:id="@+id/btn_monAnYT"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_favorite_24"
            android:layout_alignParentRight="true"/>
    <RelativeLayout
        android:id="@+id/view1"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_datMon"
        android:layout_marginBottom="3dp">
        <TextView
            android:id="@+id/tv_tenMon_datMon"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mali"
            android:text="Bánh mì gà Hawaii"/>
        <TextView
            android:id="@+id/tv_gia_datMon"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/tv_tenMon_datMon"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mali"
            android:text="35000"/>
        <TextView
            android:id="@+id/tv_thanhphan_datMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tenMon_datMon"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/alata"
            android:text="Thành phần:Gà Hawaii,rau mùi,hành tây tím,bắp cải tím,dứa,sốt hồng Tuhu"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view2"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginBottom="3dp">
        <TextView
            android:id="@+id/tv_datmon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mali"
            android:text="Chọn rau"/>
        <TextView
            android:id="@+id/tv_datmon2"
            android:gravity="left"
            android:layout_marginTop="9dp"
            android:layout_width="70dp"
            android:layout_toRightOf="@id/tv_datmon1"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/alata"
            android:text="Chọn 1"/>
        <RadioGroup
            android:layout_below="@id/tv_datmon1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rdo_coRau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Có rau"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <RadioButton
                android:id="@+id/rdo_khongRau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Không rau"/>
        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view3"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_marginBottom="3dp">
        <TextView
            android:id="@+id/tv_datmon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mali"
            android:text="Chọn ớt"/>
        <TextView
            android:id="@+id/tv_datmon4"
            android:gravity="left"
            android:layout_marginTop="9dp"
            android:layout_width="70dp"
            android:layout_toRightOf="@id/tv_datmon3"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/alata"
            android:text="Chọn 1"/>
        <RadioGroup
            android:layout_below="@id/tv_datmon3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rdo_coOt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Có ớt"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <RadioButton
                android:id="@+id/rdo_khongOt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Không ớt"/>
        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view5"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view3"
        android:layout_marginBottom="3dp">
        <TextView
            android:id="@+id/tv_datmon7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mali"
            android:text="Thêm lưu ý cho cửa hàng"/>
        <TextView
            android:id="@+id/tv_datmon8"
            android:gravity="left"
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/tv_datmon7"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/alata"
            android:text="Không bắt buộc"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_datmon7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
        <TextView
            android:id="@+id/tv_ghichu_datMon"
            android:layout_below="@id/tv_datmon7"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:text="Việc thực hiện yêu cầu còn tùy thuộc vào khả năng của quán."/>
        <View
            android:layout_below="@+id/tv_ghichu_datMon"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_datMon"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/view6"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/main2">
        <TextView
            android:id="@+id/tv_tongGia_monAn"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ hàng - 35000"
            android:textColor="@color/white"
            android:fontFamily="@font/mali"
            android:gravity="center"
            />
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/view6"
        android:layout_below="@id/view5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_truSL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/tv_soluong_datMon"
            android:src="@drawable/icon_tru"/>

        <TextView
            android:id="@+id/tv_soluong_datMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/mali"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/btn_congSL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_soluong_datMon"
            android:src="@drawable/icon_cong"/>
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>
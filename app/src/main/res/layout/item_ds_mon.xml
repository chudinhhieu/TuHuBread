<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/linear_dm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/banh_mi_bo_sot_pho_mai_trung_muoi"
        android:layout_marginTop="10dp"
        android:id="@+id/img_item_imgdm"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/tv_item_tendm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên bánh"
            android:textSize="25dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_item_Thanhphandm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành phần: "
            android:textSize="15dp"

            />
        <TextView
            android:id="@+id/tv_item_tiendm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="35000đ"
            android:textSize="25dp"
            android:textColor="@color/red"
            />
    </LinearLayout>

</LinearLayout>
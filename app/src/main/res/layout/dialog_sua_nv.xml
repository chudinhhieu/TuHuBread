<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView

        android:layout_width="wrap_content"
        android:fontFamily="@font/mali"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:textSize="24dp"
        android:layout_height="wrap_content"
        android:text="Sửa Nhân viên"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_sua_tennv"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_sua_tennv"
            android:hint="Họ và tên"
            android:fontFamily="@font/mali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_sua_sdtnv"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_sua_sdtnv"
            android:hint="Số điện thoại"
            android:fontFamily="@font/mali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_sua_usernv"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_sua_usernv"
            android:hint="Tên đăng nhập"
            android:fontFamily="@font/mali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_sua_mknv"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_sua_mknv"
            android:hint="Mật khẩu"
            android:fontFamily="@font/mali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_sua_ngaysinh_nv"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_sua_ngaysinh_nv"
            android:hint="Ngày sinh"
            android:focusable="false"
            android:inputType="date"
            android:fontFamily="@font/mali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_sua_quyennv"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_sua_quyennv"
            android:hint="Quyền nhân viên"
            android:fontFamily="@font/mali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_dal_sua_nv"
            android:text="Sửa"
            android:fontFamily="@font/mali"
            android:textColor="@color/white"
            android:backgroundTint="@color/main"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_sua_huy_nv"
            android:text="Hủy"
            android:textColor="@color/white"
            android:fontFamily="@font/mali"
            android:backgroundTint="#DD0A0A"
            android:layout_marginLeft="60dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/custom_dialog_sua_xoa">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn chức năng"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:fontFamily="@font/mali"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:id="@+id/dialog_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_mode_edit_24"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sửa món ăn"
            android:textSize="20dp"
            android:fontFamily="@font/mali"
            android:textColor="#636161"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_delete_24"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Xóa món ăn"
            android:textSize="20dp"
            android:fontFamily="@font/mali"
            android:textColor="#636161"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>